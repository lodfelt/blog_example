<%= cache 'navigation' do %>
<%= link_to t(:'.lodfelt_se'), articles_path, class: 'brand' %>

<%= form_tag articles_path, method: 'get', class: "form-search" do %>
  <%= text_field_tag :search, params[:search], class: "seach-query" %>
  <button type="submit" class="btn"><%= t(:'common.search') %></button>
<% end %>
<ul class="nav">
  <% if user_signed_in?%>
    <li class="dropdown">
      <a href="#" class="dropdown-toggle" data-toggle="dropdown">
        <%= t(:'.account') %>
        <b class="caret"></b>
      </a>
      <ul class="dropdown-menu">
        <li><%= link_to t(:'.admin'), admin_articles_path, target: '_blank' %></li>
        <li><%= link_to t(:'.log_out'), destroy_user_session_path %></li>
      </ul>
    </li>
  <% else %>
    <li>
      <a href="#login-modal" data-toggle="modal"><%= t(:'.log_in') %></a>
    </li>
    <li class="divider">|</li>
    <li>
      <a href="#sign-up-modal" data-toggle="modal"><%= t(:'.sign_up') %></a>
    </li>
    <li class="divider">|</li>
    <li>
      <%= link_to "", user_omniauth_authorize_path(:twitter), class: "sign-in-icon sprites-twitter", title: t(:'.sign_in_twitter') %>
    </li>
    <li class="divider">|</li>
    <li>
      <%= link_to "", user_omniauth_authorize_path(:facebook), class: "sign-in-icon sprites-facebook", title: t(:'.sign_in_facebook') %>
    </li>
    <li class="divider">|</li>
    <li>
      <%= link_to "", user_omniauth_authorize_path(:google_oauth2), class: "sign-in-icon sprites-google", title: t(:'.sign_in_google') %>
    </li>
  <% end %>
</ul>
<% end %>