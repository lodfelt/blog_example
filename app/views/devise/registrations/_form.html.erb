<% modal ||= false %>
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "#{'form-horizontal' if modal.present?}"}) do |f| %>
  <%= f.input :email, as: 'email' %>
  <%= f.input :username, as: 'email' %>
  <% if f.object.password_required? %>
    <%= f.input :password, as: 'password' %>
    <%= f.input :password_confirmation, as: 'password' %>
  <% end %>
  <div class="control-group">
    <div class="controls">
      <%= f.submit class: "btn btn-primary" unless modal %>
    </div>
  </div>
<% end %>