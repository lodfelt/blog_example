<% content_for :head, auto_discovery_link_tag(:rss, articles_url(format: "rss")) %>
<ul id="nav-tabs" class="nav nav-tabs">
  <li class="active">
    <a id="articles-tab" href="#article-section"><%= t(:'.list_articles') %></a>
  </li>
  <li>
    <a id="calendar-tab" href="#calendar-section"><%= t(:'.calendar') %></a>
  </li>
  <li class="rss-icon">
    <%= link_to image_tag("icons/feed-icon-28x28.png"), articles_url(format: "rss") %>
  </li>
</ul>
<section id="article-section">
  <% if @articels.blank? %>
    <p class="fallback"><%= t(:'.fallback_no_articles') %></p>
  <% else %>
    <%= render partial: "articles", locals: {articles: @articles} %>
  <% end %>
</section>
<section id="calendar-section">
  <h2 id="month">
    <%= link_to "<", date: @date.prev_month %>
    <%= @date.strftime("%B %Y") %>
    <%= link_to ">", date: @date.next_month %>
  </h2>
  <%= calendar @date do |date| %>
    <%= date.day %>
    <% if @articles_by_date[date] %>
      <% puts @articles_by_date[date] %>
      <ul>
        <% @articles_by_date[date].each do |article| %>
          <li><%= link_to truncate(article.title, length: 20), article_path(article), title: article.title %></li>
        <% end %>
      </ul>
    <% end %>
  <% end %>
  <hr>
</section>
