<h3><%= t(:'.recent_posts') %></h3>
<% unless Article.all.empty? %>
  <ol class="recent-posts unstyled">
    <% Article.all(limit: 3).each do |article| %>
      <li>
        <%= image_tag article.images.main.first.image_url(:small) unless article.images.main.first.blank? %>
        <h4 class="<%= 'with-image' unless article.images.main.first.blank? %>">
          <%= link_to article.title, article_path(article) %>
        </h4>
      </li>
    <% end %>
  </ol>
<% end %>